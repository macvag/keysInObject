{
  "env": {
    "browser": true,
    "commonjs": true,
    "node": true,

    "mocha": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "windows"],
    "semi": ["error", "always"]
  }
}
